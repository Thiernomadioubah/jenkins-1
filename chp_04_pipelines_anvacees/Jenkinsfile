pipeline {
    agent any
    environment { DEPLOY_TO='development'}
    parameters {
        booleaParam(name: 'DEBUG_BUILD', defaultValue: false, description: 'test boolean')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Test - Dev Environment') {
            when {
                environment name: 'DEPLOY_TO', value: 'development'
            }
            steps {
                echo 'Testing in dev environment...'
            }
        }
        stage('Test - Prod Environment') {
            when {
                allOf {
                    environment name: 'DEPLOY_TO', value: 'production'
                    // expression { return params.INCLUDE_PROD_TESTS }
                    expression { return params.DEBUG_BUILD }
                    // equals expected: true, actual: params.DEBUG_BUILD
                }
            }
            steps {
                echo 'Testing in prod environment...'
            }
        }
        stage('Deploy') {
            when {
                not {
                    triggeredBy cause: "UserIdCause", detail: "jdoe"
                }
            }
            steps {
                echo 'Deploying...'
            }
        }
    }
}